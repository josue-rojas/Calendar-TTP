<!DOCTYPE html>
<html>
<head>
  <!-- META -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  <link rel='stylesheet' href='/main.css'>
  <!-- JS & jquery just in case -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  <script src="/main.js"></script>

  <title>Calander</title>
</head>
<body class='body' data-month='<%= thisMonth %>' data-year='<%= thisYear %>'>
  <!-- events and form row -->
  <div class='row events'>
    <div class="col-md-1"></div>
    <div class="col-md-7 stuff">
      <!-- date -->
      <div class='events-date'></div>
      <div class="form-group time-form">
        <label for="time-start">Time Start</label>
        <select class="form-control hour-start" id="hour-start">
          <% for(var h = 0; h < 24; h++){ %>
            <option><%= h %></option>
          <% } %>
        </select>
        :
        <select class="form-control min-start" id="min-start">
          <% for(var h = 0; h < 59; h++){ %>
            <option><% if(h < 10) {%>0<% } %><%= h %></option>
          <% } %>
        </select>
        <label for="time-end">Time End</label>
        <select class="form-control hour-end" id="hour-end">
          <% for(var h = 0; h < 24; h++){ %>
            <option><%= h %></option>
          <% } %>
        </select>
        :
        <select class="form-control min-end" id="min-end">
          <% for(var h = 0; h < 59; h++){ %>
            <option><% if(h < 10) {%>0<% } %><%= h %></option>
          <% } %>
        </select>
      </div>
      <!-- priority buttons -->
      <div class='priority-buttons'>
        <button class='btn btn-success disabled priority' data-priority=0>Low</button>
        <button class='btn btn-warning priority' data-priority=1>Medium</button>
        <button class='btn btn-danger priority' data-priority=2>High</button>
      </div>
      <!-- description -->
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3"></textarea>
      </div>
      <!-- submit buttons -->
      <div class='submit-buttons'>
        <button class="btn btn-primary" type="submit" onclick='submitNew()'>Submit</button>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
  <!-- month -->
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-7 month-name "><%= thisMonth %></div>
    <div class="col-md-1"></div>
  </div>
  <!-- Name of days -->
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1 day">Sunday</div>
    <div class="col-md-1 day">Monday</div>
    <div class="col-md-1 day">Tuesday</div>
    <div class="col-md-1 day">Wednesday</div>
    <div class="col-md-1 day">Thursday</div>
    <div class="col-md-1 day">Friday</div>
    <div class="col-md-1 day">Saturday</div>
    <div class="col-md-1"></div>
  </div>

  <% dateStarted = false %>
  <% dayNumber = 1 %>

  <% for(total=0; total < 45; total++){%>
    <% if(total%9 == 0){ %>
      <div class="row">
      <div class="col-md-1"></div>
    <!-- sunday --->
    <% }else if(total%9 == 1){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 0){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <!-- monday --->
    <% }else if(total%9 == 2){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 1){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <!-- tuesday --->
    <% }else if(total%9 == 3){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 2){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <!-- wednesday --->
    <% }else if(total%9 == 4){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 3){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <!-- thursday --->
    <% }else if(total%9 == 5){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 4){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <!-- friday --->
    <% }else if(total%9 == 6){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 5){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <!-- saturday --->
    <% }else if(total%9 == 7){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 6){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <div class='day-number' data-day='<%= dayNumber %>'>
            <%= dayNumber++ %>
          </div>
        <% } %>
      </div>
    <% }else if(total%9 == 8){ %>
      <div class="col-md-1"></div>
      </div>
    <% } %>
  <% } %>
</body>
</html>
