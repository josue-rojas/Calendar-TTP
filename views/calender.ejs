<!DOCTYPE html>
<html>
<head>
  <!-- META -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
  <link rel='stylesheet' href='/main.css'>
  <!-- JS & jquery just in case -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
  <script src="/main.js"></script>

  <title>Calander</title>
</head>
<body class="">
  <!-- Name of days -->
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1 day">Sunday</div>
    <div class="col-md-1 day">Monday</div>
    <div class="col-md-1 day">Tuesday</div>
    <div class="col-md-1 day">Wednesday</div>
    <div class="col-md-1 day">Thursday</div>
    <div class="col-md-1 day">Friday</div>
    <div class="col-md-1 day">Saturday</div>
    <div class="col-md-1"></div>
  </div>

  <% dateStarted = false %>
  <% dayNumber = 1 %>

  <% for(total=0; total < 45; total++){%>
    <!-- sunday --->
    <% if(total%9 == 0){ %>
      <div class="row">
      <div class="col-md-1"></div>
    <% }else if(total%9 == 1){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 0){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <!-- monday --->
    <% }else if(total%9 == 2){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 1){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <!-- tuesday --->
    <% }else if(total%9 == 3){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 2){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <!-- wednesday --->
    <% }else if(total%9 == 4){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 3){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <!-- thursday --->
    <% }else if(total%9 == 5){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 4){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <!-- friday --->
    <% }else if(total%9 == 6){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 5){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <!-- saturday --->
    <% }else if(total%9 == 7){ %>
      <div class="col-md-1 date">
        <% if(date_name_start == 6){ %>
          <% dateStarted = true %>
        <% } %>
        <% if(dateStarted  && dayNumber < date_end+1){ %>
          <%= dayNumber++ %>
        <% } %>
      </div>
    <% }else if(total%9 == 8){ %>
      <div class="col-md-1"></div>
      </div>
    <% } %>
  <% } %>
</body>
</html>
